generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  PHOTOGRAPH
  USER
}

enum Status{
  NEW_POST
  SUBSCRIBE
}


model User {
  id                    Int                    @id @default(autoincrement())
  name                  String
  avatar                String?
  email                 String                 @unique
  password              String
  role                  Role                   @default(USER)
  posts                 Post[]                
  subscriptions         Subscription[]         @relation("SenderSubscriptions")
  receivedSubscriptions  Subscription[]        @relation("ReceiverSubscriptions")

  sentNotifications     Notification[]         @relation("SentNotifications")
  receivedNotifications Notification[]         @relation("ReceivedNotifications")

}

model Subscription {
  id         Int      @id @default(autoincrement())
  senderId   Int
  receiverId Int

  sender     User     @relation("SenderSubscriptions", fields: [senderId], references: [id])
  receiver   User     @relation("ReceiverSubscriptions", fields: [receiverId], references: [id])
}
model Post {
  id         Int         @id @default(autoincrement())
  image      String
  title      String
  description String?      @db.Text
  createdAt DateTime @default(now())
  authorId   Int
  author     User        @relation(fields: [authorId], references: [id]) 
  notifications Notification[]
}


model Notification {
  id         Int       @id @default(autoincrement()) 
  status     Status  
  senderId   Int       
  receiverId Int 
  senn Boolean @default(false)
  postId     Int?    
  createdAt  DateTime @default(now())   

  sender     User     @relation("SentNotifications", fields: [senderId], references: [id])
  receiver   User     @relation("ReceivedNotifications", fields: [receiverId], references: [id])
  post       Post?     @relation(fields: [postId], references: [id]) 
}

